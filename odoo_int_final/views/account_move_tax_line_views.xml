<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================= -->
    <!-- Tax Lines Tree/List View      -->
    <!-- ============================= -->
    <record id="view_account_move_line_tax_list" model="ir.ui.view">
        <field name="name">account.move.line.tax.list</field>
        <field name="model">account.move.line.tax</field>
        <field name="arch" type="xml">
            <list string="Account Move Tax Lines">
                <field name="tax_authority"/>
                        <field name="description"/>
                        <field name="tax_type"/>
                        <field name="tax_class"/>
                        <field name="tax_type_ref_desc"/>
                        <field name="taxable"/>
                        <field name="calc_base"/>
                        <field name="non_taxable_amount"/>
                        <field name="exempt_amount"/>
                        <field name="percent_taxable"/>
                        <field name="rate"/>
                        <field name="total_tax"/>
            </list>
        </field>
    </record>

    <!-- ============================= -->
    <!-- Tax Line Form View            -->
    <!-- ============================= -->
    <record id="view_account_move_line_tax_form" model="ir.ui.view">
        <field name="name">account.move.line.tax.form</field>
        <field name="model">account.move.line.tax</field>
        <field name="arch" type="xml">
            <form string=" Account Move Tax Line">
                <sheet>
                    <group>
                       <field name="tax_authority"/>
                        <field name="description"/>
                        <field name="tax_type"/>
                        <field name="tax_class"/>
                        <field name="tax_type_ref_desc"/>
                        <field name="taxable"/>
                        <field name="calc_base"/>
                        <field name="non_taxable_amount"/>
                        <field name="exempt_amount"/>
                        <field name="percent_taxable"/>
                        <field name="rate"/>
                        <field name="total_tax"/>
                    </group>

                    <group>
                        <field name="extra" readonly="1" colspan="4"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

