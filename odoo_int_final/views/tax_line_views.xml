<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================= -->
    <!-- Tax Lines Tree/List View      -->
    <!-- ============================= -->
    <record id="view_sale_order_line_tax_list" model="ir.ui.view">
        <field name="name">sale.order.line.tax.list</field>
        <field name="model">sale.order.line.tax</field>
        <field name="arch" type="xml">
            <list string="Tax Lines (Integration partner LnS Infusion)">
                 <field name="tax_authority"/>
                        <field name="description"/>
                        <field name="tax_type"/>
                        <field name="tax_class"/>
                        <field name="tax_type_ref_desc"/>
                        <field name="taxable"/>
                        <field name="calc_base"/>
                        <field name="non_taxable_amount"/>
                        <field name="exempt_amount"/>
                        <field name="percent_taxable"/>
                        <field name="rate"/>
                        <field name="total_tax"/>
                       
            </list>
        </field>
    </record>

    <!-- ============================= -->
    <!-- Tax Line Form View            -->
    <!-- ============================= -->
    <record id="view_sale_order_line_tax_form" model="ir.ui.view">
        <field name="name">sale.order.line.tax.form</field>
        <field name="model">sale.order.line.tax</field>
        <field name="arch" type="xml">
            <form string="Tax Lines">
             <header>
            <span class="o_form_label" style="font-weight:bold; font-size:16px; color:#333;">
                Integration partner LnS Infusion
            </span>
            </header>

                <sheet>
                    <group>
                       <field name="tax_authority"/>
                        <field name="description"/>
                        <field name="tax_type"/>
                        <field name="tax_class"/>
                        <field name="tax_type_ref_desc"/>
                        <field name="taxable"/>
                        <field name="calc_base"/>
                        <field name="non_taxable_amount"/>
                        <field name="exempt_amount"/>
                        <field name="percent_taxable"/>
                        <field name="rate"/>
                        <field name="total_tax"/>
                        
                    </group>

                    <group>
                        <field name="extra" readonly="1" colspan="4"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================= -->
    <!-- Tax Line Action               -->
    <!-- ============================= -->
    <record id="action_open_tax_lines" model="ir.actions.act_window">
        <field name="name">Tax Lines</field>
        <field name="res_model">sale.order.line.tax</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('sale_line_id', '=', context.get('default_sale_line_id'))]</field>
        <!-- No view_id, let Odoo pick default -->
    </record>
     

</odoo>
