<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Add PS Code field to product.template form -->
  <record id="view_product_template_inherit_ceretax" model="ir.ui.view">
    <field name="name">product.template.form.ceretax</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet" position="inside">
        <group>
          <field name="ceretax_ps_code_id" widget="many2one" options="{'no_create': False}"/>
        </group>
      </xpath>
    </field>
  </record>

