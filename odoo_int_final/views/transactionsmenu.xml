    <!-- ========================= -->
    <!--      TREE VIEW (GRID)     -->
    <!-- ========================= -->
    <record id="view_ceretax_transaction_list" model="ir.ui.view">
        <field name="name">ceretax.transaction.list</field>
        <field name="model">ceretax.transaction</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="endpoint"/>
                <field name="status_code"/>
                <field name="status"/>
                <field name="partner_id"/>
                <field name="sale_order_id"/>
                <field name="timestamp"/>
                <field name="sale_line_id"/>

            </list>
        </field>
    </record>

    <!-- ========================= -->
    <!--      FORM VIEW            -->
    <!-- ========================= -->
    <record id="view_ceretax_transaction_form" model="ir.ui.view">
        <field name="name">ceretax.transaction.form</field>
        <field name="model">ceretax.transaction</field>
        <field name="arch" type="xml">
            <form string="CereTax Transaction">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="endpoint"/>
                        <field name="status_code"/>
                        <field name="status"/>
                        <field name="timestamp"/>
                    </group>

                    <group string="Links">
                        <field name="partner_id"/>
                        <field name="sale_order_id"/>
                        <field name="sale_line_id"/>
                    </group>

                    <notebook>
                        <page string="Request">
                            <group>
                                <field name="request_headers" widget="text"/>
                                <field name="request_body" widget="text"/>
                                <field name="request_payload" widget="text"/>
                            </group>
                        </page>

                        <page string="Response">
                            <group>
                                <field name="response_body" widget="text"/>
                                <field name="response_payload" widget="text"/>
                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

